---
import Title from "../../components/Title.astro";
import BlogPreview from "../../components/cards/CardNews.astro";
import Header from "../../components/headers/HeaderToRead.astro";
import Layout from "../../layouts/LayoutMain.astro";
let allPost = await Astro.glob("./articulos/*");
---

<Layout>
  <Header />
  <Title title="Lee las noticias de la Araekhia" subtitle="" />

  <section>
    <div
      class="relative items-center w-full px-5 py-12 mx-auto md:px-12 lg:px-24 max-w-7xl"
    >
      <div class="grid w-full grid-cols-1 gap-6 mx-auto lg:grid-cols-3">
        {allPost.map((p) => <BlogPreview post={p} />)}
      </div>
    </div>
  </section>
</Layout>
